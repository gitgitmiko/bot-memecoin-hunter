# ============================================================================
# BOT MEMECOIN HUNTER - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env
# nano .env

# ============================================================================
# GENERAL SETTINGS
# ============================================================================
NODE_ENV=production
TIMEZONE=Asia/Jakarta
LOG_LEVEL=info

# ============================================================================
# POSTGRESQL DATABASE
# ============================================================================
POSTGRES_DB=memecoin_hunter
POSTGRES_USER=memecoin_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_PORT=5432

# ============================================================================
# REDIS
# ============================================================================
REDIS_PASSWORD=CHANGE_THIS_STRONG_REDIS_PASSWORD
REDIS_PORT=6379

# ============================================================================
# N8N WORKFLOW AUTOMATION
# ============================================================================
N8N_DB_NAME=n8n
N8N_USER=admin
N8N_PASSWORD=CHANGE_THIS_STRONG_N8N_PASSWORD
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_HOST=0.0.0.0
N8N_WEBHOOK_URL=http://localhost:5678

# ============================================================================
# TELEGRAM BOT
# ============================================================================
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# ============================================================================
# CRAWLER SERVICE
# ============================================================================
CRAWLER_INTERVAL=300000

# ============================================================================
# ANALYZER SERVICE
# ============================================================================
ANALYZER_INTERVAL=60000
